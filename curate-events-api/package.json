{
  "name": "curate-events-api",
  "version": "1.0.0",
  "description": "Simple, reliable event collection API using Perplexity AI",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:prod": "./scripts/start-production.sh",
    "start:dev": "./scripts/start-dev.sh",
    "stop": "./scripts/stop-production.sh",
    "health": "./scripts/health-check.sh",
    "dev": "node --watch server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration",
    "smoke:api": "node scripts/smoke-api.js",
    "migrate:lists": "node scripts/migrate-lists-to-db.js",
    "lint": "eslint src/ --ext .js",
    "build": "echo 'No build step required for Node.js'",
    "scrape:venues": "node scripts/scrape-venues.js",
    "scrape:retry": "node scripts/scrape-venues.js --retry-failed"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chrono-node": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.18.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "events",
    "perplexity",
    "api",
    "theatre",
    "music",
    "concerts"
  ],
  "author": "Claude Code",
  "license": "MIT"
}
