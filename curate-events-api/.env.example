# Curate Events API environment template
# Copy this file to .env and fill in values.

# -----------------------------------------------------------------------------
# REQUIRED (startup-blocking)
# -----------------------------------------------------------------------------
# Ticketmaster is the primary source in current architecture.
TICKETMASTER_CONSUMER_KEY=your_ticketmaster_consumer_key_here

# -----------------------------------------------------------------------------
# RECOMMENDED (feature-complete behavior)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# -----------------------------------------------------------------------------
# SERVER / CORS
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=8765
HOST=127.0.0.1
FRONTEND_URL=http://127.0.0.1:8766
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# LIST STORAGE BACKEND
# -----------------------------------------------------------------------------
# file (default): uses data/*.xlsx for whitelist/blacklist
# db: uses Postgres table list_entries via DATABASE_URL
LIST_STORAGE_MODE=file

# Required when LIST_STORAGE_MODE=db
DATABASE_URL=

# Optional refresh interval for DB-backed in-memory cache (milliseconds)
LIST_DB_SYNC_INTERVAL_MS=30000

# -----------------------------------------------------------------------------
# OPTIONAL / LEGACY PROVIDERS (kept for compatibility)
# -----------------------------------------------------------------------------
PERPLEXITY_API_KEY=
PPLX_API_KEY=
APYFLUX_API_KEY=
APYFLUX_APP_ID=
APYFLUX_CLIENT_ID=
EXA_API_KEY=
SERPER_API_KEY=
TICKETMASTER_CONSUMER_SECRET=
GOOGLE_MAPS_PLATFORM_API_KEY=
GOOGLE_MAPS_API_KEY=
JINA_READER_URL=https://r.jina.ai
SUPER_HYBRID_URL=http://127.0.0.1:8799
SUPER_HYBRID_DEFAULT=false
